{
    "name": "vibing-launcher",
    "version": "0.1.3",
    "productName": "Vibing Launcher",
    "private": true,
    "homepage": ".",
    "main": "build/electron/main.js",
    "author": "Vibing Studios",
    "description": "Vibing Studios Web3 experiences launcher.",
    "dependencies": {
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.1.1",
        "@testing-library/user-event": "^13.5.0",
        "@types/electron-devtools-installer": "^2.2.2",
        "@types/jest": "^27.4.1",
        "@types/needle": "^2.5.3",
        "@types/node": "^16.11.31",
        "@types/react": "^18.0.8",
        "@types/react-dom": "^18.0.0",
        "adm-zip": "^0.5.9",
        "bootstrap": "^5.1.3",
        "compare-versions": "^4.1.3",
        "electron-devtools-installer": "^3.2.0",
        "electron-dl": "^3.3.1",
        "electron-is-dev": "^2.0.0",
        "electron-reload": "^2.0.0-alpha.1",
        "electron-updater": "^5.0.5",
        "react": "^18.1.0",
        "react-bootstrap": "^2.3.1",
        "react-dom": "^18.1.0",
        "react-scripts": "5.0.1",
        "request": "^2.88.2",
        "request-to-curl": "^0.1.6",
        "typescript": "^4.6.3",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "electron:dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
        "electron:build": "yarn build && tsc -p electron && electron-builder",
        "build:publish": "yarn build && tsc -p electron && electron-builder --mac --win --publish always",
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "format": "prettier --write ."
    },
    "build": {
        "appId": "com.VibingLauncher.vibing",
        "productName": "Vibing Launcher",
        "extends": null,
        "files": [
            "build/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "win": {
            "publish": [
                "github"
            ]
        }
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/axios-curlirize": "^1.3.2",
        "concurrently": "^7.1.0",
        "cross-env": "^7.0.3",
        "electron": "^18.1.0",
        "electron-builder": "^23.0.3",
        "prettier": "2.6.2",
        "wait-on": "^6.0.1"
    },
    "repository": {
		"type": "git",
		"url": "https://github.com/vibingstudio/vibing-launcher"
	}
}
